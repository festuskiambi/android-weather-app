<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/books_card_item"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginEnd="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="#66ffffff"
    app:cardCornerRadius="5dp"

    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:id="@+id/station_name_textView" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_textView"
            android:layout_marginRight="16dp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_below="@+id/station_name_textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp" />
        <TextView
            android:text="15"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/temperature_textView"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:srcCompat="@drawable/circleoutline"
            android:layout_above="@+id/temperature_textView"
            android:layout_marginStart="62dp"
            android:layout_marginLeft="62dp"
            android:id="@+id/imageView" />


    </RelativeLayout>
</android.support.v7.widget.CardView>